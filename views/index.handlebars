<div class="content">
	
	{{#each articles}}
		<div>
			<a href={{link}}>
				<h2>{{title}}</h2>
			</a>

			{{#if image}}
				<img src={{image}}>
			{{/if}}

			<h6>{{summary}}</h6>

			<button class="view-comments btn btn-warning" data-id={{_id}}>View Comments</button>

			<form>
				<input class="name-input-{{id}}" type="text" placeholder="Your Name">
				<input class="body-input-{{id}}" type="text" placeholder="Comment Here">
				<button class="post-comment btn btn-dark" data-id={{_id}}>Post Comment</button>
			</form>
		</div>
		<br><br>
	{{/each}}
	
</div>